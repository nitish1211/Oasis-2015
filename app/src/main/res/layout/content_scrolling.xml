<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EventDetails"

    tools:showIn="@layout/activity_event_details">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/big_card">


            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:textSize="34dp"
                android:alpha="0.88"
                android:gravity="left"
                android:textColor="@color/black"
                android:id="@+id/eventName"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:alpha="0.44"
                android:text="GymG"
                android:id="@+id/eventLocation"
                android:layout_above="@+id/eventDetails"
                android:layout_alignLeft="@+id/eventName"
                android:layout_alignStart="@+id/eventName" />
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:alpha="0.44"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:id="@+id/eventTime"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/eventDetails"
                android:textSize="15dp"
                android:text="29th Oct 8:00 P.M. "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventName"
                android:textSize="18dp"
                android:alpha="0.54"
                android:textColor="@color/black"
                android:id="@+id/eventDetails"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text=" Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event Data for the sample Event "/>

        </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
